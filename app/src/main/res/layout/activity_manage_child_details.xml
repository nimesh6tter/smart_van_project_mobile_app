    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:fontFamily="@font/poppinsmedium"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="40dp"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="MANAGE CHILD DETAILS" />

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="72dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp">


        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#42a5f5"
            android:text="insert new child details"
            android:onClick="onChildins"
            tools:ignore="OnClick"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="72dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="250dp">

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#42a5f5"
            android:text="delete child"
            android:onClick="onChildDel"
            tools:ignore="OnClick"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="72dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="350dp">

        <Button
            android:id="@+id/button10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#42a5f5"
            android:text="update child details"
            android:onClick="onChildupd"
            tools:ignore="OnClick"
             />
    </LinearLayout>
